<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- title %> - Sunucu Yönetim Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-900 text-white min-h-screen">
    <nav class="bg-gray-800 shadow-lg">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center space-x-2">
                    <div class="w-8 h-8 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-lg flex items-center justify-center">
                        <span class="text-white font-bold text-sm">DB</span>
                    </div>
                    <span class="text-xl font-bold">Discord Bot</span>
                </div>
                <a href="/" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg text-white font-semibold transition-colors duration-200">
                    Ana Panele Dön
                </a>
            </div>
        </div>
    </nav>

    <div class="container mx-auto px-4 py-8">
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg shadow-lg p-6 mb-8">
            <h1 class="text-3xl font-bold text-center mb-2"><%= guild.name %> Kontrol Paneli</h1>
            <p class="text-center text-indigo-100">Sunucu ayarlarınızı buradan yönetin</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-gray-800 rounded-lg p-6 text-center">
                <div class="text-2xl font-bold text-indigo-400 mb-2"><%= guild.members.cache.size %></div>
                <div class="text-gray-300 text-sm">Toplam Üye</div>
            </div>
            <div class="bg-gray-800 rounded-lg p-6 text-center">
                <div class="text-2xl font-bold text-green-400 mb-2"><%= guild.members.cache.filter(m => m.presence?.status === 'online').size %></div>
                <div class="text-gray-300 text-sm">Çevrimiçi</div>
            </div>
            <div class="bg-gray-800 rounded-lg p-6 text-center">
                <div class="text-2xl font-bold text-yellow-400 mb-2"><%= guild.channels.cache.size %></div>
                <div class="text-gray-300 text-sm">Kanal</div>
            </div>
            <div class="bg-gray-800 rounded-lg p-6 text-center">
                <div class="text-2xl font-bold text-purple-400 mb-2"><%= guild.roles.cache.size %></div>
                <div class="text-gray-300 text-sm">Rol</div>
            </div>
        </div>

        <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden mb-8">
            <div class="px-6 py-4 bg-gray-700 border-b border-gray-600">
                <h3 class="text-xl font-semibold text-white">Sunucu Üyeleri</h3>
                <p class="text-gray-300 text-sm">Sunucu üyelerinizi yönetin</p>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-700">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">ID</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Kullanıcı Adı</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Durum</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody class="bg-gray-800 divide-y divide-gray-600">
                        <% guild.members.cache.forEach(member => { %>
                        <tr class="hover:bg-gray-700 transition-colors duration-200">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= member.user.id %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">
                                <div class="flex items-center">
                                    <% if (member.user.avatar) { %>
                                        <img src="https://cdn.discordapp.com/avatars/<%= member.user.id %>/<%= member.user.avatar %>.png?size=32"
                                             alt="Avatar"
                                             class="w-8 h-8 rounded-full mr-3">
                                    <% } else { %>
                                        <div class="w-8 h-8 bg-gray-600 rounded-full flex items-center justify-center mr-3">
                                            <span class="text-xs font-bold text-white"><%= member.user.username.charAt(0).toUpperCase() %></span>
                                        </div>
                                    <% } %>
                                    <%= member.user.username %>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                <% if (member.presence?.status) { %>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                        <% if (member.presence.status === 'online') { %>bg-green-100 text-green-800<% } %>
                                        <% if (member.presence.status === 'idle') { %>bg-yellow-100 text-yellow-800<% } %>
                                        <% if (member.presence.status === 'dnd') { %>bg-red-100 text-red-800<% } %>
                                        <% if (member.presence.status === 'offline') { %>bg-gray-100 text-gray-800<% } %>">
                                        <%= member.presence.status === 'online' ? 'Çevrimiçi' :
                                            member.presence.status === 'idle' ? 'Boşta' :
                                            member.presence.status === 'dnd' ? 'Rahatsız Etmeyin' : 'Çevrimdışı' %>
                                    </span>
                                <% } else { %>
                                    <span class="text-gray-500">Bilinmiyor</span>
                                <% } %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                <button onclick="kickMember('<%= member.user.id %>')"
                                        class="inline-flex items-center px-3 py-1 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 transition-colors duration-200">
                                    At
                                </button>
                                <button onclick="banMember('<%= member.user.id %>')"
                                        class="inline-flex items-center px-3 py-1 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200">
                                    Yasakla
                                </button>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>


        <div class="bg-gradient-to-r from-gray-800 to-gray-900 rounded-lg p-6 text-center">
            <h3 class="text-xl font-semibold mb-4">Geliştirici</h3>
            <div class="flex items-center justify-center space-x-4">
                <div class="w-16 h-16 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full flex items-center justify-center">
                    <span class="text-2xl font-bold text-white">İ</span>
                </div>
                <div>
                    <h4 class="text-lg font-semibold">ismaiwz</h4>
                    <p class="text-gray-300">Full-Stack Developer</p>
                    <p class="text-sm text-gray-400">Bu yönetim paneli ismaiwz tarafından geliştirilmiştir</p>
                </div>
            </div>
        </div>
    </div>

<script>
    function kickMember(memberId) {
        if (confirm('Bu üyeyi sunucudan atmak istediğinizden emin misiniz?')) {
            fetch(`/dashboard/<%= guild.id %>/kick`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ memberId: memberId })
            }).then(response => {
                if (response.ok) {
                    alert('Üye başarıyla atıldı!');
                    location.reload();
                } else {
                    alert('Üye atılırken bir hata oluştu.');
                }
            });
        }
    }

    function banMember(memberId) {
        if (confirm('Bu üyeyi sunucudan yasaklamak istediğinizden emin misiniz?')) {
            fetch(`/dashboard/<%= guild.id %>/ban`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ memberId: memberId })
            }).then(response => {
                if (response.ok) {
                    alert('Üye başarıyla yasaklandı!');
                    location.reload();
                } else {
                    alert('Üye yasaklanırken bir hata oluştu.');
                }
            });
        }
    }
</script>
</body>
</html>